<div>
  <h2>Genres</h2>

  <table>
    <tr>
      <th></th>
      <th>Name</th>
    </tr>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.id %></td>
      <td><%= link_to(genre.name, genre_path(genre), action: 'show', class: 'nav-link') %></td>
    </tr>
    <% end %>
  </table>
</div>
